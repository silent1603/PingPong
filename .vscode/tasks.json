{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "args": [],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "linux" : {
                "command": "${workspaceFolder}/scripts/build/build_linux.sh"
            },
            "windows" :{
                "command": "${workspaceFolder}/scripts/build/build_win.bat"
            },
            "presentation": {
                "reveal": "always"
            },
            "group": "build"
        }
    ]
}